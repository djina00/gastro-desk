<UserControl x:Class="GastroDesk.Views.UserManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:GastroDesk.Converters">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="#F5F5F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Add User Panel -->
        <Border Background="White" Margin="10" CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.1"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Add New User" FontSize="18" FontWeight="Bold" Margin="15" Foreground="#333"/>

                <StackPanel Grid.Row="1" Margin="15,0,15,15">
                    <TextBlock Text="Username" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewUsername, UpdateSourceTrigger=PropertyChanged}"
                             Padding="10" Margin="0,0,0,15"/>

                    <TextBlock Text="Password" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Padding="10" Margin="0,0,0,15"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>

                    <TextBlock Text="First Name" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewFirstName, UpdateSourceTrigger=PropertyChanged}"
                             Padding="10" Margin="0,0,0,15"/>

                    <TextBlock Text="Last Name" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewLastName, UpdateSourceTrigger=PropertyChanged}"
                             Padding="10" Margin="0,0,0,15"/>

                    <TextBlock Text="Role" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding AvailableRoles}"
                              SelectedItem="{Binding NewUserRole}"
                              Padding="10" Margin="0,0,0,20"/>

                    <Button Content="Add User"
                            Command="{Binding AddUserCommand}"
                            Padding="15,12"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Cursor="Hand"/>

                    <!-- Success Message -->
                    <Border Background="#E8F5E9" CornerRadius="5" Padding="10" Margin="0,15,0,0"
                            Visibility="{Binding SuccessMessage, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Text="{Binding SuccessMessage}" Foreground="#2E7D32" TextWrapping="Wrap"/>
                    </Border>

                    <!-- Error Message -->
                    <Border Background="#FFF3E0" CornerRadius="5" Padding="10" Margin="0,15,0,0"
                            Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Text="{Binding ErrorMessage}" Foreground="#E65100" TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Users List Panel -->
        <Border Grid.Column="1" Background="White" Margin="10" CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.1"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Users" FontSize="18" FontWeight="Bold" Foreground="#333" Margin="15"/>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding Users}"
                          SelectedItem="{Binding SelectedUser}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Margin="10"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                        <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*"/>
                        <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*"/>
                        <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="80"/>
                        <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="60"/>
                        <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt, StringFormat=d}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="15">
                    <Button Content="Toggle Active/Inactive"
                            Command="{Binding ToggleUserActiveCommand}"
                            Padding="15,8"
                            Background="#FF9800"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.ColumnSpan="2" Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Loading..." FontSize="18" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
