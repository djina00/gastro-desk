<UserControl x:Class="GastroDesk.Views.ReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Report Type Selector -->
        <Border Background="White" Margin="10" CornerRadius="5" Padding="15">
            <StackPanel Orientation="Horizontal">
                <RadioButton Content="Daily Report"
                             IsChecked="{Binding ShowDailyReport}"
                             FontSize="14" Margin="0,0,30,0"/>
                <RadioButton Content="Weekly Report"
                             IsChecked="{Binding ShowWeeklyReport}"
                             FontSize="14"/>

                <Separator Width="1" Background="#E0E0E0" Margin="30,0"/>

                <!-- Daily Date Picker -->
                <StackPanel Orientation="Horizontal"
                            Visibility="{Binding ShowDailyReport, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Date:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <DatePicker SelectedDate="{Binding SelectedDate}" Width="150"/>
                    <Button Content="Export PDF"
                            Command="{Binding ExportDailyPdfCommand}"
                            Margin="20,0,0,0" Padding="15,8"
                            Background="#E91E63" Foreground="White" BorderThickness="0"/>
                </StackPanel>

                <!-- Weekly Date Picker -->
                <StackPanel Orientation="Horizontal"
                            Visibility="{Binding ShowWeeklyReport, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Week Start:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <DatePicker SelectedDate="{Binding WeekStartDate}" Width="150"/>
                    <Button Content="Export PDF"
                            Command="{Binding ExportWeeklyPdfCommand}"
                            Margin="20,0,0,0" Padding="15,8"
                            Background="#E91E63" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Daily Report Content -->
        <ScrollViewer Grid.Row="1" Visibility="{Binding ShowDailyReport, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Summary Cards -->
                <UniformGrid Columns="4" Margin="0,0,0,10">
                    <Border Background="White" Margin="5" CornerRadius="5" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Total Orders" Foreground="#666"/>
                            <TextBlock Text="{Binding DailyReport.TotalOrders, FallbackValue=0}"
                                       FontSize="32" FontWeight="Bold" Foreground="#2196F3"/>
                        </StackPanel>
                    </Border>
                    <Border Background="White" Margin="5" CornerRadius="5" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Completed" Foreground="#666"/>
                            <TextBlock Text="{Binding DailyReport.CompletedOrders, FallbackValue=0}"
                                       FontSize="32" FontWeight="Bold" Foreground="#4CAF50"/>
                        </StackPanel>
                    </Border>
                    <Border Background="White" Margin="5" CornerRadius="5" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Cancelled" Foreground="#666"/>
                            <TextBlock Text="{Binding DailyReport.CancelledOrders, FallbackValue=0}"
                                       FontSize="32" FontWeight="Bold" Foreground="#f44336"/>
                        </StackPanel>
                    </Border>
                    <Border Background="White" Margin="5" CornerRadius="5" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Revenue" Foreground="#666"/>
                            <TextBlock Text="{Binding DailyReport.TotalRevenue, StringFormat=C2, FallbackValue=$0.00}"
                                       FontSize="32" FontWeight="Bold" Foreground="#FF9800"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- Orders Table -->
                <Border Grid.Row="1" Background="White" Margin="5" CornerRadius="5" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Orders" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding DailyReport.Orders}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  MaxHeight="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding OrderId}" Width="60"/>
                                <DataGridTextColumn Header="Table" Binding="{Binding TableNumber}" Width="60"/>
                                <DataGridTextColumn Header="Time" Binding="{Binding OrderDateTime, StringFormat=HH:mm}" Width="80"/>
                                <DataGridTextColumn Header="Waiter" Binding="{Binding WaiterName}" Width="*"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C2}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- Top Dishes -->
                <Border Grid.Row="2" Background="White" Margin="5" CornerRadius="5" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Top Selling Dishes" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding DailyReport.TopDishes}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  MaxHeight="250">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Dish" Binding="{Binding DishName}" Width="*"/>
                                <DataGridTextColumn Header="Quantity Sold" Binding="{Binding QuantitySold}" Width="120"/>
                                <DataGridTextColumn Header="Revenue" Binding="{Binding TotalRevenue, StringFormat=C2}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Weekly Report Content -->
        <ScrollViewer Grid.Row="1" Visibility="{Binding ShowWeeklyReport, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Weekly Summary -->
                <UniformGrid Columns="3" Margin="0,0,0,10">
                    <Border Background="White" Margin="5" CornerRadius="5" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Week Period" Foreground="#666"/>
                            <TextBlock FontSize="16" FontWeight="Bold" Foreground="#333">
                                <Run Text="{Binding WeeklyReport.StartDate, StringFormat=MMM dd}"/>
                                <Run Text=" - "/>
                                <Run Text="{Binding WeeklyReport.EndDate, StringFormat=MMM dd}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    <Border Background="White" Margin="5" CornerRadius="5" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Total Completed Orders" Foreground="#666"/>
                            <TextBlock Text="{Binding WeeklyReport.TotalOrders, FallbackValue=0}"
                                       FontSize="32" FontWeight="Bold" Foreground="#4CAF50"/>
                        </StackPanel>
                    </Border>
                    <Border Background="White" Margin="5" CornerRadius="5" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Total Revenue" Foreground="#666"/>
                            <TextBlock Text="{Binding WeeklyReport.TotalRevenue, StringFormat=C2, FallbackValue=$0.00}"
                                       FontSize="32" FontWeight="Bold" Foreground="#FF9800"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- Daily Breakdown -->
                <Border Grid.Row="1" Background="White" Margin="5" CornerRadius="5" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Daily Breakdown" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding WeeklyReport.DailyReports}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat='ddd, MMM dd'}" Width="150"/>
                                <DataGridTextColumn Header="Total Orders" Binding="{Binding TotalOrders}" Width="120"/>
                                <DataGridTextColumn Header="Completed" Binding="{Binding CompletedOrders}" Width="120"/>
                                <DataGridTextColumn Header="Cancelled" Binding="{Binding CancelledOrders}" Width="120"/>
                                <DataGridTextColumn Header="Revenue" Binding="{Binding TotalRevenue, StringFormat=C2}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Loading -->
        <Border Grid.RowSpan="2" Background="#80FFFFFF"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="10"/>
                <TextBlock Text="Loading report..." Margin="0,10,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Error -->
        <Border Grid.RowSpan="2" VerticalAlignment="Bottom" Margin="20"
                Background="#FFF3E0" CornerRadius="5" Padding="15"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
            <TextBlock Text="{Binding ErrorMessage}" Foreground="#E65100"/>
        </Border>
    </Grid>
</UserControl>
