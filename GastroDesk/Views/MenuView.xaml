<UserControl x:Class="GastroDesk.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#F5F5F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Categories Panel -->
        <Border Background="White" Margin="10" CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.1"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Categories" FontSize="18" FontWeight="Bold" Margin="15" Foreground="#333"/>

                <ListBox Grid.Row="1"
                         ItemsSource="{Binding Categories}"
                         SelectedItem="{Binding SelectedCategory}"
                         Margin="10,0"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock Text="{Binding Description}" Foreground="#666" FontSize="12"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Add Category (Manager only) -->
                <StackPanel Grid.Row="2" Margin="10" Visibility="{Binding IsManager, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Add New Category" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock Text="Category Name" Foreground="#666" Margin="0,0,0,3"/>
                    <TextBox Text="{Binding NewCategoryName, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8" Margin="0,0,0,10"/>
                    <TextBlock Text="Description" Foreground="#666" Margin="0,0,0,3"/>
                    <TextBox Text="{Binding NewCategoryDescription, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8" Margin="0,0,0,10"/>
                    <Button Content="Add Category"
                            Command="{Binding AddCategoryCommand}"
                            Padding="10,8" Background="#4CAF50" Foreground="White" BorderThickness="0"
                            Margin="0,0,0,5"/>
                    <Button Content="Delete Selected Category"
                            Command="{Binding DeleteCategoryCommand}"
                            Padding="10,8" Background="#f44336" Foreground="White" BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Dishes Panel -->
        <Border Grid.Column="1" Background="White" Margin="10" CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.1"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="15">
                    <TextBlock Text="Dishes" FontSize="18" FontWeight="Bold" Foreground="#333" VerticalAlignment="Center"/>
                    <Button Content="Add Dish" Command="{Binding AddDishCommand}"
                            Margin="20,0,0,0" Padding="15,8"
                            Background="#2196F3" Foreground="White" BorderThickness="0"
                            Visibility="{Binding IsManager, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>

                <!-- Export/Import Buttons for Selected Category's Dishes -->
                <StackPanel Grid.Row="1" Margin="15,0,15,10" Visibility="{Binding IsManager, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Export/Import dishes from selected category:" Foreground="#666" FontSize="11" Margin="0,0,0,5"/>
                    <WrapPanel>
                        <Button Content="Export JSON" Command="{Binding ExportToJsonCommand}" Padding="10,5" Margin="0,0,5,5" Background="#FF9800" Foreground="White" BorderThickness="0"/>
                        <Button Content="Export XML" Command="{Binding ExportToXmlCommand}" Padding="10,5" Margin="0,0,5,5" Background="#FF9800" Foreground="White" BorderThickness="0"/>
                        <Button Content="Import JSON" Command="{Binding ImportFromJsonCommand}" Padding="10,5" Margin="0,0,5,5" Background="#9C27B0" Foreground="White" BorderThickness="0"/>
                        <Button Content="Import XML" Command="{Binding ImportFromXmlCommand}" Padding="10,5" Margin="0,0,5,5" Background="#9C27B0" Foreground="White" BorderThickness="0"/>
                    </WrapPanel>
                </StackPanel>

                <DataGrid Grid.Row="2"
                          ItemsSource="{Binding Dishes}"
                          SelectedItem="{Binding SelectedDish}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Margin="10"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C2}" Width="80"/>
                        <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Edit/Delete Buttons -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="15"
                            Visibility="{Binding IsManager, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Button Content="Edit" Command="{Binding EditDishCommand}" Padding="15,8" Margin="0,0,10,0" Background="#2196F3" Foreground="White" BorderThickness="0"/>
                    <Button Content="Toggle Active" Command="{Binding ToggleDishActiveCommand}" Padding="15,8" Margin="0,0,10,0" Background="#FF9800" Foreground="White" BorderThickness="0"/>
                    <Button Content="Delete" Command="{Binding DeleteDishCommand}" Padding="15,8" Background="#f44336" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Edit Dish Dialog -->
        <Border Grid.ColumnSpan="2" Background="#80000000"
                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="White" Width="400" CornerRadius="10" Padding="20" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Dish Details" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                    <TextBlock Text="Name" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding DishName, UpdateSourceTrigger=PropertyChanged}" Padding="10" Margin="0,0,0,15"/>

                    <TextBlock Text="Description" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding DishDescription, UpdateSourceTrigger=PropertyChanged}" Padding="10" Margin="0,0,0,15" TextWrapping="Wrap" Height="80"/>

                    <TextBlock Text="Price" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding DishPrice, UpdateSourceTrigger=PropertyChanged}" Padding="10" Margin="0,0,0,20"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Command="{Binding CancelEditCommand}" Padding="20,10" Margin="0,0,10,0" Background="#9E9E9E" Foreground="White" BorderThickness="0"/>
                        <Button Content="Save" Command="{Binding SaveDishCommand}" Padding="20,10" Background="#4CAF50" Foreground="White" BorderThickness="0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

        <!-- Error Message -->
        <Border Grid.ColumnSpan="2" VerticalAlignment="Bottom" Margin="20"
                Background="#FFF3E0" CornerRadius="5" Padding="15"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
            <TextBlock Text="{Binding ErrorMessage}" Foreground="#E65100"/>
        </Border>
    </Grid>
</UserControl>
